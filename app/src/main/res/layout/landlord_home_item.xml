<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="20dp"
    app:cardBackgroundColor="#F8F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/boardinghouse_pic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/boardingease_logo_icon"
                app:strokeWidth="1dp"
                app:strokeColor="#00BB63"/>

            <TextView
                android:id="@+id/landlord_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Landlord Lastname"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#00BB63"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Status"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#00BB63"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="â‚±"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="#00BB63"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="#00BB63"
                    android:textSize="20sp"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/viewDetails_bttn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="View/Edit Details"
                android:textSize="12sp"
                android:backgroundTint="#00BB63"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>